generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  records Record[]
}

model Record {
  id        Int        @id @default(autoincrement())
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  type      RecordType
  timestamp DateTime   @default(now())
  isModified Boolean   @default(false)
}

enum RecordType {
  START_WORK
  END_WORK
  START_BREAK
  END_BREAK
}
